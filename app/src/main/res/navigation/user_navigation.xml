<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_navigation"
    app:startDestination="@id/listUserFragment">

    <fragment
        android:id="@+id/listUserFragment"
        android:name="com.example.lab.ui.ListUserFragment"
        android:label="fragment_list_user"
        tools:layout="@layout/fragment_list_user" >
        <action
            android:id="@+id/action_listUserFragment_to_addUserFragment"
            app:destination="@id/addUserFragment"
            app:popUpTo="@id/listUserFragment" />
        <action
            android:id="@+id/action_listUserFragment_to_rentalItemListFragment"
            app:destination="@id/rentalItemListFragment"
            app:popUpTo="@id/listUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.example.lab.ui.AddUserFragment"
        android:label="fragment_add_user"
        tools:layout="@layout/fragment_add_user" />
    <fragment
        android:id="@+id/rentalItemListFragment"
        android:name="com.example.lab.ui.RentalItemListFragment"
        android:label="fragment_rental_item_list"
        tools:layout="@layout/fragment_rental_item_list" >
        <argument
            android:name="userId"
            app:argType="integer" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="userEmail"
            app:argType="string" />
    </fragment>
</navigation>